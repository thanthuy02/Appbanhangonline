<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appbanhangonline"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.login.LoginActivity" />
        <activity android:name=".activities.admin.ProductActivity" />
        <activity android:name=".activities.admin.ProductCreateActivity" />
        <activity android:name=".activities.admin.MenuAdminActivity" />
        <activity android:name=".activities.admin.BillActivity" />
        <activity android:name=".activities.admin.BillDetailsActivity" />
        <activity android:name=".activities.admin.CategoryActivity" />
        <activity android:name=".activities.admin.CategoryCreateActivity" />
        <activity android:name=".activities.admin.CategoryEditActivity" />
        <activity android:name=".activities.admin.CustomerActivity" />
        <activity android:name=".activities.admin.CustomerBillActivity" />
        <activity android:name=".activities.admin.CustomerBillDetailsActivity" />
        <activity android:name=".activities.admin.ProductEditActivity" />
        <activity android:name=".activities.admin.RevenueActivity" />
        <activity android:name=".activities.login.ForgotPasswordActivity" />
        <activity android:name=".activities.login.RegisterActivity" />
        <activity android:name=".activities.login.VerifyCodeActivity" />
        <activity android:name=".activities.login.ResetPasswordActivity" />
        <activity android:name=".activities.user.HomeUserActivity" />
        <activity android:name=".activities.user.CartActivity" />
    </application>

</manifest>