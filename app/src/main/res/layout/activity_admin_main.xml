<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.admin.MenuAdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE4B5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Admin"
            android:textColor="#2AA2BF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="Log out"
            android:src="@drawable/ic_logout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnCategoryAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Quản lý danh mục"
            android:textColorLink="#000011"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnProductAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Quản lý sản phẩm"
            android:textColorLink="#000011"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCustomerAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Quản lý khách hàng"
            android:textColorLink="#000011"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBillAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Quản lý hóa đơn"
            android:textColorLink="#000011"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStatisticAdmin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_btn"
            android:text="Thống kê doanh số"
            android:textColorLink="#000011"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>

