<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFE4B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txtTuT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/logo"
            android:fontFamily="cursive"
            android:text="TuT"
            android:textColor="#2AA2BF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imgBtnUser"
            android:background="@drawable/ic_cart" />

        <!-- Icon user -->
        <ImageButton
            android:id="@+id/imgBtnUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_user"
            android:onClick="toggleUserInfo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_info"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        tools:ignore="MissingConstraints">

        <!-- Thông tin người dùng -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal"
            android:text="Kieu Trang"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="kieutrang021002@gmail.com"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Button logout -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:onClick="logoutClicked"
            android:src="@drawable/ic_logout_button" />

    </LinearLayout>

    <!-- Thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/bg_search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoLayout"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_search"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="#FDE2B5">

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bút "
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_filter"
            android:background="@android:color/transparent"
            android:layout_toStartOf="@+id/txtFilter"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/txtFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc"
            android:layout_alignParentEnd="true"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>